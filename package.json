{
	"name": "@sixa/wp-snippets",
	"version": "1.0.0",
	"description": "A plugin containing factory classes or methods for the Sixa projects.",
	"keywords": [
		"factory",
		"php",
		"snippet",
		"utils"
	],
	"homepage": "https://github.com/sixach/wp-snippets#readme",
	"bugs": {
		"url": "https://github.com/sixach/wp-snippets/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sixach/wp-snippets.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "sixa AG",
	"scripts": {
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "composer lint:php",
		"lint:wpcs": "composer lint:wpcs",
		"lint:wpcs-fix": "composer lint:wpcbf",
		"makepot": "composer make-pot"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.php": [
			"npm run lint:wpcs"
		]
	},
	"devDependencies": {
		"@wordpress/scripts": "16.1.4",
		"husky": "^6.0.0",
		"lint-staged": "11.0.0"
	}
}
